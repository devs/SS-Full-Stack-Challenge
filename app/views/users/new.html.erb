<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="large-offset-3 large-6 columns">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "SIGN UP", class: "button" %>
    <% end %>
  </div>
</div>